@{
}
@model Beverage

<h2>Chi tiết đồ uống</h2>

<div>
    <h4>Đồ uống</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Mô tả:
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Giá:
        </dt>
        <dd class="col-sm-10">
            @Model.Price VND
        </dd>
        <dt class="col-sm-2">
            Ảnh:
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="Ảnh đồ uống" class="img-fluid" />
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-secondary">Sửa</a> |
    <a href="@Url.Action("Index")" class="btn btn-primary">Quay lại danh sách</a>
</div>
