@{
}
@model Beverage

<h2>Xóa đồ uống</h2>

<h3>Bạn có chắc muốn xóa đồ uống này?</h3>
<div>
    <h4>Đồ uống</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Model.Price VND
        </dd>
        <dt class="col-sm-2">
            Ảnh
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="Ảnh đồ uống"/>
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button> |
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

